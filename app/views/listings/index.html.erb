<div class="small-12 columns">
  <section id="homepage-hero" class="row">
      <h1>Handcrafted items from <br/> around the world.</h1>
      <h3>Discover one of a kind items</h3>
  </section>
</div><!-- .columns -->

<div class="small-12 columns">
  <div class="row center">
    <% @listings.each do |listing| %>
      <div class="item-listing medium-3 large-3 columns">
        <div class="panel" data-equalizer-watch>
          <%= link_to image_tag(listing.image.url), listing %>
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p><%= number_to_currency(listing.price) %></p>
              <p><%= "Sold by #{listing.user.name}" %></p>
          </div><!-- .caption -->
        </div><!-- .panel -->
      </div><!-- .columns -->
    <% end %>
  </div><!-- .row -->
<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, data: {no_turbolink: true} %>
<% end %>
</div><!-- .columns -->