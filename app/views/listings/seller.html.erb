<div class="small-12 columns">
  <div class="row center">
    <% @listings.each do |listing| %>
      <div class="item-listing medium-4 large-4 columns">
        <div class="panel" data-equalizer-watch>
          <%= link_to image_tag(listing.image.url), listing %>
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p><%= number_to_currency(listing.price) %></p>
              <p><%= "Sold by #{listing.user.name}" %></p>   <% if (user_signed_in?) && (current_user == listing.user) %>
                <%= link_to 'Edit', edit_listing_path(listing) %>
                <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
          </div><!-- .caption -->
        </div><!-- .panel -->
      </div><!-- .columns -->
    <% end %>
  </div><!-- .row -->
<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path %>
<% end %>
</div><!-- .columns -->